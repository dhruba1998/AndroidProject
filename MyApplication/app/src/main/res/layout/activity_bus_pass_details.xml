<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BusPassDetailsActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentTop="true"
        android:background="#5800a6"

        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/hamburgerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hamburger_icon"
            android:layout_marginStart="10sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50sp"
            android:layout_centerVertical="true"
            android:text="Digital Bus Pass"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notifications_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70sp"
            android:layout_marginStart="30sp"
            app:cardCornerRadius="15sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_for_buspass"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dakshineswar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_horizontal_icon"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="33sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gitanjali Park"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office In - 9:30"
                android:layout_gravity="bottom"
                android:layout_marginStart="10sp"
                android:layout_marginBottom="10sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Office Out - 18:30"
                android:layout_gravity="right"
                android:layout_marginTop="120sp"
                android:layout_marginEnd="10sp"
                android:layout_marginBottom="10sp"
                android:textColor="#fff"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="240sp"
            android:layout_marginStart="30sp"
            app:cardCornerRadius="15sp"
            android:outlineAmbientShadowColor="@color/black">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginStart="20sp"
                android:layout_marginTop="20sp"/>


            <TextView
                android:id="@+id/dhruba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Name1"
                android:layout_marginStart="20sp"
                android:layout_marginTop="40sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/busStopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Stop Name"
                android:layout_marginStart="20sp"
                android:layout_marginTop="90sp"/>

            <TextView
                android:id="@+id/dunlop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BusStop1"
                android:layout_marginStart="20sp"
                android:layout_marginTop="110sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/startDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:layout_marginStart="20sp"
                android:layout_marginTop="160sp"/>

            <TextView
                android:id="@+id/startDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st Dec, 2023"
                android:layout_marginStart="20sp"
                android:layout_marginTop="180sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/employeeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee ID"
                android:layout_marginTop="20sp"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>

            <TextView
                android:id="@+id/employeeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EmpId1"
                android:layout_marginTop="40sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>

            <TextView
                android:id="@+id/routeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route Type"
                android:layout_marginTop="90sp"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>

            <TextView
                android:id="@+id/routeBoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both"
                android:layout_marginTop="110sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>

            <TextView
                android:id="@+id/endDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:layout_marginTop="160sp"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>

            <TextView
                android:id="@+id/endDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31st Dec, 2023"
                android:layout_marginTop="180sp"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:layout_marginEnd="20sp"/>


            <TextView
                android:id="@+id/route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route : Dakshineswar To Gitanjali Park And Retrun Via-Airport 1 No."
                android:layout_marginStart="20sp"
                android:layout_marginBottom="30sp"
                android:textAlignment="center"
                android:layout_marginTop="250sp"
                android:textStyle="bold"/>


        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/tcsLogo"
            android:layout_width="200sp"
            android:layout_height="100sp"
            android:src="@drawable/tcs_logo"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>